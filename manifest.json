{
  "manifest_version": 3,
  "name": "DataVoid - Find & Delete Old Accounts",
  "version": "1.0.0",
  "description": "Discover forgotten accounts and reclaim your digital privacy",
  
  "permissions": [
    "storage",
    "history",
    "tabs",
    "activeTab",
    "cookies"
  ],
  
  "host_permissions": [
    "<all_urls>"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content/content.js"],
    "css": ["content/content.css"]
  }],
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/icon16.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  },
  
  "options_page": "options/options.html",
  
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  }
}
